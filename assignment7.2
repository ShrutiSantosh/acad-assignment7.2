public class FindSubString {
	public static void main(String[] args) {
		String word = "AcadGild";

		if (word.indexOf("Gild") != -1) {
			System.err.printf("String AcadGild contains 'Gild' %n", word);
		} else {
			System.err.printf("String AcadGild does not contains 'Gild' %n ", word);
		}

		if (word.contains("Acad")) {
			System.err.printf("String AcadGild contains 'Acad' %n", word);
		} else {
			System.err.printf("String AcadGild does not contains 'Acad' %n", word);
		}

		if (word.contains("Bangalore")) {
			System.err.printf("String AcadGild contains 'Bangalore' %n", word);
		} else {
			System.err.printf("String AcadGild does not contains 'Bangalore' %n", word);
		}

	}

}

